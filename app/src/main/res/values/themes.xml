<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpotifyDownloader" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/one</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/one</item>
        <item name="colorPrimaryContainer">@color/two</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="colorSecondary">@color/one</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/two</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <item name="colorTertiary">@color/one</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/three</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceContainer">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <style name="Theme.SpotifyDownloader" parent="Base.Theme.SpotifyDownloader" />

    <!-- Splash screen theme -->
    <style name="Theme.SpotifyDownloader.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/spotify_one</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.SpotifyDownloader</item>
    </style>
</resources>